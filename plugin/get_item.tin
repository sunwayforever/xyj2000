#alias {get_qian} {
    #alias qian_action #cr;
    #alias qian_action %1;
    #class get_qian.inner open;
    #alias {got_qian} {
        #class get_qian.inner kill;
        #delay {2} {
            #showme GOT_QIAN;
            qian_action;
        };    
    };
    #alias {qu_qian} {
        gt 相记钱庄;
        on_there {
            qu 5 gold;
            account;
        };
    };
    #action {%*_ITEM_FOUND} {
        #if {%%1 > 5} {
            got_qian;
        };
        #else {
            qu_qian;
        };
    };
    #action {ITEM_NOT_FOUND} {
        qu_qian;
    };
    #action {你从银号里取出} {
        got_qian;
    };
    #class get_qian.inner close;

    checkitem 黄金;
};

