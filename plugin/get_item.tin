#alias {get_wan} {
    #alias wan_action #cr;
    #alias wan_action %1;
    
    gt 回春药铺;
    #action {你向杨中顺买下%*辟谷丸。} {
        #unaction {你向杨中顺买下%*辟谷丸。};
        gt ct;
        on_there {
            #showme GOT_WAN;
            wan_action;
        };
    };
